<p id="notice"><%= notice %></p>
<%= link_to 'New Mission', new_mission_path %><br>
<h1>My missions:</h1>
<blockquote>
<% if @missions then %>
<style>
table
{
border-collapse:collapse;
}
table, td, th
{
border:1px solid black;
}
td
{
padding:5px;
}
</style>

<table class="table table-striped">
  <col width="140">
  <col width="10">
  <col width="70">
  <col width="300">
  <col width="500">

  <thead>
    <tr>
    <th>Actions</th>
    <th>Pub</th>
    <th>Role</th>
    <th>Name</th>
    <th>Blurb</th>
  </tr>
  </thead>
  <tbody>
    <% @missions.each do |mission| %>
  <tr>
    <td>
    <% @collaborator = Collaborator.where( :mission_id => mission.id, :user_id => current_user.id ) %>
    <% if @collaborator.first.permission != 'viewer' then %>
       <%= link_to 'Plan', mission_stickies_path(mission, :kind => 'success'), :class => 'btn btn-mini' %> <%= link_to 'View', mission_path(mission), :class => 'btn btn-mini' %>
    <% end %>
    <% if @collaborator.first.permission == 'creator' || @collaborator.first.permission == 'admin' then   %>
       <%= link_to 'Edit', edit_mission_path(mission), :class => 'btn btn-mini' %> <%= link_to 'Del', mission, method: :delete, data: { confirm: 'All mission data will be permantently deleted. Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
       <% end %>
    </td>
    <td><%= if mission.is_public then 'Yes' else 'No' end %></td>
    <td> <%= @collaborator.first.permission.capitalize %></td>
    <td><%= mission.name[0..60] %></td>
    <td><%= mission.blurb[0..120] %></td>
  </tr>
 <% end %>
 <% else %>
    <%= flash[:notice] = "You have no missions to show here." %>
 <% end %>
</table>


  